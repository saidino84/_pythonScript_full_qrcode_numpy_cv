#:import os os
#:import pygame pygame
<MainScreen>:
    id:main_screem
    name:'main_screen'
    on_touch_down:
        print(os.listdir())

    canvas.before:
        Color:
            rgba:.12,.91,.1,1
        Ellipse:
            size:200,200
            pos:self.height/2,self.width/2
    FitImage:
        source:'icons/bg_claudia.png'
        opacity:.05
    BoxLayout:
        orientation:'vertical'
        spacing:dp(20)
        y:root.height/2
        pos_hint:{'x':.4}
        MDFlatButton:
            opacity:0
            pos_hint:{'y':.8}
            id:btn_send
            text:'Send'
            md_bg_color:1,.12,.12,1
            on_release:
                #app.sm.transition=WipeTransition()
                app.sm.current="screen_send"
        MDFlatButton:
            opacity:0
            id:btn_receive
            text:'Receiver'
            md_bg_color:.3,1,.3,1
            on_release:
                app.sm.current="screen_receiver"

